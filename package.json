{
  "name": "fragments",
  "private": "true",
  "version": "0.7.0",
  "description": "Back-end to my fragments API",
  "scripts": {
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test": "jest -c jest.config.js --runInBand --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint --config .eslintrc.js src/** tests/**",
    "start": "node src/index.js",
    "dev": "NODE_ENV=basic-auth LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "aws": "NODE_ENV=cognito LOG_LEVEL=debug nodemon ./src/index.js --watch src",
    "debug": "LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roboticbeing/fragments.git"
  },
  "author": "Jessica Krishtul",
  "license": "UNLICENSED",
  "devDependencies": {
    "@orangeopensource/hurl": "^1.8.0",
    "eslint": "^8.23.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "aws-jwt-verify": "^2.1.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "http-auth": "^4.2.0",
    "http-auth-passport": "^1.0.7",
    "markdown-it": "^13.0.1",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^8.5.0",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.1.0",
    "stoppable": "^1.1.0"
  }
}
